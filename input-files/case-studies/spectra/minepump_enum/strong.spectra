module Minepump

type VALUE = {HIGH, LOW};

env VALUE water;
env VALUE methane;
sys boolean pump;

assumption -- initial_assumption
	water=LOW & methane=LOW;

guarantee -- initial_guarantee
	!pump;

guarantee -- guarantee1_1
	G(water=HIGH->next(pump));

guarantee -- guarantee2_1
	G(methane=HIGH->next(!pump));

assumption -- assumption1_1
	G(PREV(pump)&pump->next(water=LOW));

assumption -- assumption2_1
	G(water=LOW | methane=LOW);
