module TrafficE2

env boolean car;
env boolean emergency;
env boolean police;
sys boolean green;


guarantee -- green_often
	G(car -> F(green));

guarantee -- no_car_often
    GF(!car);

assumption -- not_police_often
	GF(!police);

assumption -- car_idle_when_red
	G(car & !green &!emergency-> next(car));

assumption -- car_moves_when_green
	G(car & green &!police-> next(!car));

