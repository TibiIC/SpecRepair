module Arbiter

env boolean a;
env boolean r1;
env boolean r2;
sys boolean g1;
sys boolean g2;

guarantee -- guarantee1_1
	G(r1=true->F(g1=true));

guarantee -- guarantee2_1
	G(r2=true->F(g2=true));

guarantee -- guarantee3_1
	G(a=false->g1=false&g2=false);

guarantee -- guarantee4
    G(g1=false | g2=false);

assumption -- a_always
	G(r1=true-> a=true);



